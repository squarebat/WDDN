@model DigiClassroom.ViewModels.ClassroomHomeViewModel

<h6>Are you sure you want to delete this class? ;-;</h6>
<div>
    <p>
        Deleting the classroom will result in loss of all blackboards, assignments and the people. 
        Be very sure before going ahead!
    </p>
    <hr/>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="@Model.Classroom.ID"/>
        <input type="submit" value="Yes, I am Sure" class="btn btn-danger" />
    </form>
</div>
